{
  "name": "floppy-disk",
  "version": "1.0.0",
  "description": "FloppyDisk - lightweight, simple, and powerful state management library",
  "keywords": [
    "state",
    "manager",
    "management",
    "react",
    "hooks",
    "store",
    "utilities"
  ],
  "author": "Muhammad Afifudin",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/afiiif/floppy-disk"
  },
  "bugs": {
    "url": "https://github.com/afiiif/floppy-disk/issues"
  },
  "homepage": "https://github.com/afiiif/floppy-disk#readme",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "sideEffects": false,
  "files": [
    "lib/",
    "esm/"
  ],
  "types": "lib/index.d.ts",
  "typings": "lib/index.d.ts",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "prepare": "husky install",
    "build:cjs": "tsc -p tsconfig.prod.json",
    "build:es": "tsc -p tsconfig.prod.json -m esNext --outDir esm",
    "build": "yarn clean && yarn build:cjs && yarn build:es",
    "clean": "rimraf lib esm",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:types": "tsc --noEmit",
    "test": "jest",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^29.5.3",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "lint-staged": "^14.0.0",
    "prettier": "^3.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-test-renderer": "^18.2.0",
    "rimraf": "^5.0.1",
    "semantic-release": "^21.0.9",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0"
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "alpha",
        "prerelease": true
      },
      {
        "name": "beta",
        "prerelease": true
      }
    ]
  }
}
